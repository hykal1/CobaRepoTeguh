<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/black"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FilmPertama">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/bgquiet"
        />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="160dp"
        android:src="@drawable/quiet"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="50dp"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="105dp"
        android:layout_marginLeft="190dp"
        android:layout_marginRight="50dp"
        >

        <TextView
            android:id="@+id/tv_object_received"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="Hallo"/>
    </LinearLayout>

    <Button
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="280dp"
        android:text="LanJiao"
        android:background="@drawable/button_merah"
        android:textColor="@color/white"
        android:textStyle="bold"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A Quiet Place"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginTop="350dp"
        android:layout_marginLeft="30dp"
        android:textSize="18dp"
        />

    <TextView
        android:id="@+id/p1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A Quiet Place memperlihatkan bagaimana keluarga Abbott yang terjebak dalam sebuah kondisi mengerikan. Mereka menjalani hidup dalam keheningan untuk menghindari makhluk misterius yang berburu dengan suara. Anak-anak Abbott di A Quiet Place diperankan oleh Noah Jupe, Millicent Simmonds dan Cade Woodward. Anak paling besar di film A Quiet Place tersebut adalah seorang aktris tunarungu."
        android:textColor="@color/white"
        android:layout_marginTop="375dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:justificationMode="inter_word"
        />

</RelativeLayout>