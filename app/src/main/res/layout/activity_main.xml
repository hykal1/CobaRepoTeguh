<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <TextView
            android:textColor="@color/white"
            android:id="@+id/atas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Home Page"
            android:textStyle="bold"
            />

        <TextView
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Movie"
            android:textStyle="bold"
            android:layout_marginLeft="25dp"
            />

        <TextView
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Drama"
            android:textStyle="bold"
            android:layout_marginLeft="25dp"
            />

        <TextView
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Anime"
            android:textStyle="bold"
            android:layout_marginLeft="25dp"
            />

        <TextView
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Horror"
            android:textStyle="bold"
            android:layout_marginLeft="25dp"
            />
    </LinearLayout>

    <View
        android:id="@+id/garis_bawah"
        android:layout_width="75dp"
        android:layout_height="2dp"
        android:background="@color/white"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        />

    <ImageView
        android:id="@+id/poster"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-5dp"
        android:src="@drawable/postermoving2"
        />

    <TextView
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Featured > "
        android:textStyle="bold"
        android:layout_marginTop="-50dp"
        android:layout_marginLeft="20dp"
        android:textSize="18sp"
        android:layout_below="@id/poster"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="380dp">

        <ImageView
            android:layout_width="90dp"
            android:layout_height="120dp"
            android:src="@drawable/quiet"
            android:layout_marginRight="10dp"
            />

        <ImageView
            android:layout_width="90dp"
            android:layout_height="120dp"
            android:src="@drawable/elemental"
            android:layout_marginRight="10dp"
            />

        <ImageView
            android:layout_width="90dp"
            android:layout_height="120dp"
            android:src="@drawable/perang"
            android:layout_marginRight="10dp"
            />

        <ImageView
            android:layout_width="90dp"
            android:layout_height="120dp"
            android:src="@drawable/notime"
            android:layout_marginRight="10dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="505dp">

        <TextView
            android:textColor="@color/white"
            android:id="@+id/Quiet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A Quiet Place"
            />

        <TextView
            android:textColor="@color/white"
            android:id="@+id/Elemental"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Elemental"
            android:layout_marginLeft="15dp"
            />

        <TextView
            android:textColor="@color/white"
            android:id="@+id/perang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1917"
            android:layout_marginLeft="38dp"
            />

        <TextView
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No Tim"
            android:layout_marginLeft="69dp"
            />

    </LinearLayout>

    <TextView
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trending Movie > "
        android:textStyle="bold"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="20dp"
        android:textSize="18sp"
        android:layout_below="@id/poster"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="580dp">

        <ImageView
            android:layout_width="90dp"
            android:layout_height="120dp"
            android:src="@drawable/interstellar"
            android:layout_marginRight="10dp"
            />

        <ImageView
            android:layout_width="90dp"
            android:layout_height="120dp"
            android:src="@drawable/starwar"
            android:layout_marginRight="10dp"
            />

        <ImageView
            android:layout_width="90dp"
            android:layout_height="120dp"
            android:src="@drawable/dune"
            android:layout_marginRight="10dp"
            />

        <ImageView
            android:layout_width="90dp"
            android:layout_height="120dp"
            android:src="@drawable/jumanji"
            android:layout_marginRight="10dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="705dp">

        <TextView
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="INterstellar"
            />

        <TextView
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Star Wars"
            android:layout_marginLeft="28dp"
            />

        <TextView
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dune"
            android:layout_marginLeft="40dp"
            />

        <TextView
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jumanji"
            android:layout_marginLeft="69dp"
            />

    </LinearLayout>


</RelativeLayout>